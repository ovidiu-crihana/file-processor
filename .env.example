# Cartella di input radice
SOURCE_BASE_PATH=\\\\10.10.90.241\\Archivio\\4Service\\Applications\\Vinci\\Work

# Cartella di output radice (conterrà \tif\<n>\ e \pdf\<n>\).
# Per specificare una cartella locale, il path deve iniziare con \\ (due backslah), es: \\C:\\utenti\\ESPORTATORE\\Output
OUTPUT_BASE_PATH=\\\\10.10.90.241\\Archivio\\4Service\\Applications\\Vinci\\Output

# CSV
CSV_PATH=\\C:\\utenti\\ESPORTATORE\\host\\original.csv
CSV_DELIMITER=;

###########################
# NUMERAZIONE / RAGGRUPPI #
###########################
# I gruppi di contenuto si aprono/chiudono quando cambia BATCH o TIPO_DOCUMENTO (per il TIFF/PDF aggregato).
CSV_GROUP_KEYS=BATCH,TIPO_DOCUMENTO

# La numerazione delle cartelle di output segue la coppia (BATCH, IDDOCUMENTO).
FOLDER_NUMBERING_KEYS=BATCH,IDDOCUMENTO

###########
# TAVOLE  #
###########
# Base path tavole
TAVOLE_BASE_PATH=\\\\10.10.90.241\\Archivio\\4Service\\Applications\\Vinci\\Tavole\\Importate
# Trigger tavole (già presente nel progetto; lo cito per completezza)
# es: regex per "contiene numeri/alfanumerico"
TAVOLE_TRIGGER_PATTERN="(?i).*[0-9A-Za-z].*"
# Valori che identificano le righe tavole (già presenti)
TAVOLE_PLANIMETRIE_VALUES="ELABORATO_GRAFICO"
# Nuovo flag: abilita la conversione TIFF->PDF per le tavole (per riga)
TAVOLE_PDF_ENABLED=false


#####################
# NAMING DEGLI OUTPUT
#####################
# Nome file standard per TIF e PDF:
# {TIPO_PRATICA}_{PRAT_NUM}_{ANNO}_{TIPO_DOCUMENTO}.{EXT}
OUTPUT_FILENAME_PATTERN={TIPO_PRATICA}_{PRAT_NUM}_{ANNO}_{TIPO_DOCUMENTO}.{EXT}

# Sanitizzazione nome file: none | basic
# basic → trim, spazi->underscore, rimozione caratteri non validi per filename Windows.
FILENAME_SANITIZE=basic

#############################
# COMPORTAMENTO & PERFORMANCE
#############################
# Cosa fare se l'output esiste già: overwrite | skip | suffix
ON_EXISTING=overwrite

# Comportamento su sorgente mancante: warn | fail
MISSING_SOURCE=warn

# tiffcp (libtiff) è più veloce e usa meno RAM su grandi volumi.
MERGE_TOOL=magick
IMAGEMAGICK_PATH=\\C:\\utenti\\ESPORTATORE\\imagicj\\magicj.exe

# Compressione TIFF: group4 | lzw | zip
# Se i sorgenti sono bianco/nero, group4 è estremamente efficiente.
TIFF_COMPRESSION=group4

# Conversione PDF: magick | tiff2pdf
PDF_TOOL=magick

MAX_PARALLEL_PROCESSES=2
IMAGEMAGICK_MEMORY_LIMIT=2GiB
IMAGEMAGICK_MAP_LIMIT=4GiB
IMAGEMAGICK_THREAD_LIMIT=2

# Qualità PDF (se usi magick): standard | print | max
PDF_QUALITY=standard

# Logs
LOG_FILE=var\logs\file_processor.log
LOG_LEVEL=info

# Checkpoint / Resume
CHECKPOINT_FILE=var/checkpoints/process.csv
CHECKPOINT_AUTO_SAVE=true
RESUME_SKIP_STATUSES=OK

# Parallelismo
PARALLEL_ENABLED=false
PARALLEL_MAX_PROCESSES=4

TEMP_PATH=var\tmp
